<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:screenOrientation="sensor"
                                                   tools:context="com.example.myapplication.MainActivity">

     <Button
            android:id="@+id/addCameraButton"
            android:layout_width="128dp"
            android:layout_height="70dp"
            android:text="Camera"
            tools:layout_editor_absoluteY="17dp" tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="34dp"/>
    <Button
            android:id="@+id/addVideoButton"
            android:layout_width="132dp"
            android:layout_height="75dp"
            android:text="Video"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="@+id/addCameraButton" android:layout_marginStart="100dp"
            app:layout_constraintTop_toTopOf="@+id/addCameraButton"
            app:layout_constraintBottom_toBottomOf="@+id/addCameraButton"/>
    <ImageView
            android:id="@+id/videoFrameView"
            android:layout_width="379dp"
            android:layout_height="445dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_launcher_background"
    />
</androidx.constraintlayout.widget.ConstraintLayout>